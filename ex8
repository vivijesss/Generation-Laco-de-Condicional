programa
{
	
	funcao inicio()
	{
		real base, altura

		escreva("Base do triângulo: ")
		leia(base)

		escreva("\n", "Altura do triângulo: ")
		leia(altura)

		se(base > 0 e altura > 0)
		{
			real area

			area = base * altura

			escreva("\n", "Area do triângulo: ", area)
		}senao
		{
			escreva("\n", "VALORES NÃO SÃO VÁLIDOS")
		}
	}
}
